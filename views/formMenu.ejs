<%- include('partials/header')%>

<div class="container-fluid p-5">
  <form action="/menus/add" method="POST">
    <h1>Add Menu</h1>
      <div class="form-group">
        <label>Name</label>
        <input name="name" type="text" class="form-control" placeholder="e.g: 12 Nasi Goreng">
      </div>
      <div class="form-group">
          <label>Price</label>
          <input name="price" type="text" class="form-control" placeholder="e.g: 25000">
      </div>
      <div class="form-group">
          <label>Image</label>
          <input name="Image" type="text" class="form-control" placeholder="e.g: https://poshjournal.com/wp-content/uploads/2019/08/nasi-goreng-recipe-indonesian-fried-rice-9.jpg">
      </div>
        <div class="container-fluid text-right mb-3">
      <button type="submit" class="btn btn-primary text-right">Save</button>
      <a href="/menus"><button type="button" class="btn btn-danger text-right">Cancel</button></a>
      </div>
  </form>
</div>

<%- include('partials/footer')%>